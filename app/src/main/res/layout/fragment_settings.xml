<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/AppTheme"
    tools:context="com.example.final_project.ui.settings.SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <!--Profile column start-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="#8A8A8A"
                    android:textSize="22sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="70dp">


                    <ImageView
                        android:id="@+id/prof_image"
                        android:layout_width="137dp"
                        android:layout_height="136dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/account_pic" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Name"
                    android:textColor="#000"
                    android:textSize="18sp" />
            </LinearLayout>

            <!--Profile column end -->

            <!--Theme column start-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Theme"
                    android:textColor="#8A8A8A"
                    android:textSize="22sp" />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:text="Dark / light Theme : "/>
                   <ToggleButton
                       android:id="@+id/dark_light"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
            </LinearLayout>

            </LinearLayout>

            <!--Theme column end -->

            <TextView
                android:id="@+id/signout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/action_sign_out"
                android:textColor="#000"
                android:textSize="18sp" />


        </LinearLayout>

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/progressbar2"
            style="@style/SpinKitView.Large.MultiplePulse"
            android:layout_width="120dp"
            android:layout_height="129dp"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@+id/ll1"
            app:layout_constraintEnd_toEndOf="@+id/ll1"
            app:layout_constraintStart_toStartOf="@+id/ll1"
            app:layout_constraintTop_toTopOf="@+id/ll1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
